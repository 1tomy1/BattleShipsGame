@model GameInitModel
@{
    ViewData["Title"] = "PlayGame";
}
@section Scripts {
    <script src="@Url.Content("~/js/WebSocketManager.js")"></script>
    <script src="@Url.Content("~/js/webSocketConn.js")"></script>
}

<div id="disconnectedContainer" class="hide">
    <div class="loadingContainer">
        <div class="windowCenter">
            <h1 class="text-center opponentDisconnectedText">Opponent has disconnected!</h1>
        </div>
    </div>
</div>

<div id="winnerContainer" class="hide">
    <div class="loadingContainer">
        <div class="windowCenter">
            <div class="hide" id="youLostText">
                <h1 class="text-center youLostText">You lost!</h1>
            </div>
            <div class="hide" id="youWonText">
                <h1 class="text-center youWonText">You won!</h1>
            </div>
        </div>
    </div>
</div>

<div id="loadingContainer" class="loadingContainer">
    <div class="windowCenter">
        <div class="loader"></div>
        <div class="windowCenterLoadingText">
            <h1 class="text-center">Waiting for opponent to connect...</h1>
        </div>
    </div>
</div>

<div class="text-center">
    <div id="playerOne"></div>
    <div class="playerVersus">vs</div>
    <div id="playerTwo"></div>
</div>

<div>
    <div id="playerTurn">
        <h2 class="text-center myTurnHeader">Your turn!</h2>
    </div>
    <div id="opponentTurn">
        <h2 class="text-center opponentTurnHeader">Opponent's turn!</h2>
    </div>

</div>
<div class="row">
    <div class="col-sm unselectableItems">
        <h3 class="text-center">My battlefield</h3>
        <table class="table table-dark text-center">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    @for (int i = 0; i < 10; i++)
                    {
                        <th scope="col">@i</th>
                    }
                </tr>
            </thead>
            <tbody>
                @for (int i = 0; i < 10; i++)
                {
                    <tr>
                        <th scope="row">@i</th>
                        @for (int j = 0; j < 10; j++)
                        {
                            <td px="@j" py="@i" class="tableCellPlayer" />
                        }
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <div class="col-sm">
        <h3 class="text-center">Opponent's battlefield</h3>
        <table class="table table-dark text-center">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    @for (int i = 0; i < 10; i++)
                    {
                        <th scope="col">@i</th>
                    }
                </tr>
            </thead>
            <tbody>
                @for (int i = 0; i < 10; i++)
                {
                    <tr>
                        <th scope="row">@i</th>
                        @for (int j = 0; j < 10; j++)
                        {
                            <td ox="@j" oy="@i" class="tableCell" />
                        }
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<form class="hide">
    <input type="hidden" asp-for="PlayerName" id="PlayerName">
    <input type="hidden" asp-for="SerializedBFArray" id="SerializedBFArray">
</form>
